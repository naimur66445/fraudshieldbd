# FraudShieldBD Shopify App â€” Environment Variables
# Copy this file as .env and fill in the values

# ==========================================
# Shopify App Credentials
# Get these from your Shopify Partners Dashboard
# https://partners.shopify.com
# ==========================================
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_SCOPES=read_orders,write_orders,read_products

# ==========================================
# App Settings
# ==========================================
HOST=https://your-app-domain.com
PORT=3000
NODE_ENV=development

# ==========================================
# FraudShieldBD API
# Get your API key from https://fraudshield.bd/dashboard
# ==========================================
FRAUDSHIELD_API_URL=https://fraudshield.bd/api/customer/check
FRAUDSHIELD_API_KEY=cf_your_api_key_here

# ==========================================
# Risk Thresholds (%)
# ==========================================
RISK_THRESHOLD_HIGH=50
RISK_THRESHOLD_MEDIUM=70

# ==========================================
# Behavior Settings
# ==========================================
AUTO_CHECK_ENABLED=true
CHECK_COD_ONLY=true
AUTO_TAG_ORDERS=true
ADD_ORDER_NOTES=true
